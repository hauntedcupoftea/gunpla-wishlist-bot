generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Kit {
  id             String   @id @default(uuid()) 
  item_code      String   @unique
  release_date   String?
  jpy_price      Int
  availability   String
  stock_status   String?
  product_name   String

  wishlists      Wishlist[]
  @@index([item_code])
}

model Wishlist {
  id        String   @id @default(uuid()) 
  userId    String
  note      String?
  kitId     String   
  createdAt DateTime @default(now())
  kit       Kit      @relation(fields: [kitId], references: [id])

  @@unique([userId, kitId])
  @@index([kitId])
  @@index([userId])
}
